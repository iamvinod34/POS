@using POS.Entity.Entities;
@using POS.Util.Model;
@model IEnumerable<LocationStorageModel>

@*Partial view for location details. Created by Vinod.*@
@using (Ajax.BeginForm("InsertOrUpdateStorage", "Storage", new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "updatedMessage",
    LoadingElementId = "loader"
}))
{
    <div class="col-lg-12">
        <div class="col-lg-12 pad_2per">
            <div class="col-lg-12 pad_1perdiv">
                <div class="col-lg-12"><div class="col-lg-3"><h5>Location ID :</h5></div><div class="col-lg-6">@Html.TextBox("drpLocation")</div></div>
                <div class="col-lg-12"><div class="col-lg-3"><h5>Storage ID :</h5></div><div class="col-lg-6">@Html.TextBox("drpStorage")</div></div>
                <div class="col-lg-12"><div class="col-lg-3"><h5>Location Name :</h5></div><div class="col-lg-6">@Html.TextBox("txtLocationName")</div></div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-3"><h5></h5></div>
                <div class="btn-group-lg" role="group" aria-label="Large button group">
                    <input type="submit" class="btn btn-default btn_inpt_sumbit" value="Save" />
                    <button type="button" class="btn btn-default btn_inpt_cancel">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
<div class="col-lg-12">
    <div class="col-lg-12">
        <div class="col-lg-3 stng_Hdr">LocationID</div>
        <div class="col-lg-3 stng_Hdr">Location Name</div>
        <div class="col-lg-3 stng_Hdr">Storage ID</div>
        <div class="col-lg-3 stng_Hdr">Storage Name</div>
    </div>
</div>
<div class="col-lg-12">
    <div class="ovrflow">
        @if (Model != null)
            {
                foreach (LocationStorageModel storage in Model.StorageLocation)
                {

                <div class="col-lg-12 stng_text">
                    <div class="col-lg-2 stng_text">@storage.StorageLocation.</div>
                    <div class="col-lg-5 stng_text">@storage.StorageLocation</div>
                    <div class="col-lg-1 stng_text">@storage.StorageLocation.StorageID</div>
                    <div class="col-lg-3 stng_text">@storage.StorageLocation.StorageName</div>
                </div>
            }
            <small id="NoRecords" class="lead" style="display:none">
                No records found.
            </small>
        }
        else
        {
            <small class="lead">
                No records found.
            </small>
        }
    </div>
</div>
