@using POS.Entity.Entities;
@model tbl_Location
@*Partial view for location details. Created by Srikanth.*@
<div id="updatedMessage"></div>
<div id="loader" style="display:none">Loading...</div>
@{ string disabled=string.Empty;}
@if (Model != null)
{
    if (!string.IsNullOrEmpty(Model.LocationID))
    {
        disabled = "disabled";
        <div style="margin-left:5%"><h3>Update @Model.LocationDesc Details</h3> </div>
    }
    else
    {
        <div style="margin-left:5%"><h3>Add New Store/Location</h3></div>
    }
}
else
{
    <div style="margin-left:5%"><h3>Add New Store/Location</h3></div>
}
@using (Ajax.BeginForm("InsertOrUpdateLocation", "Location", new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "updatedMessage",
    LoadingElementId = "loader"
}))
{

    <div class="col-lg-12" style="padding:2%">
        <div class="col-lg-12 pad_1perdiv">
            <div class="col-lg-12"><div class="col-lg-3"><h5>Location ID :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.LocationID, new { @class = "bold" })</div></div>
            <div class="col-lg-12 "><div class="col-lg-3"><h5>Cost Center :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.CostCenter)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5>Name :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.LocationDesc)</div></div>
        </div>
        <div class="col-lg-12 pad_1perdiv">
            <div class="col-lg-12"><div class="col-lg-3"><h5>Address :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Address1)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5></h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Address2)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5></h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Address3)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5>Postal Code:</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.POBox)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5>Region:</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Region)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5>City:</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.City)</div></div>
            <div class="col-lg-12"><div class="col-lg-3"><h5>Country:</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Country)</div></div>
        </div>
        <div class="col-lg-12">
            <div>
                @*Google Maps*@
            </div>
            <div class="pad_1perdiv">
                <div class="col-lg-12"><div class="col-lg-3"><h5>Contact Person :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Contact)</div></div>
                <div class="col-lg-12"><div class="col-lg-3"><h5>Telephone :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Phone)</div></div>
                <div class="col-lg-12"><div class="col-lg-3"><h5>Fax :</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.Fax)</div></div>
                <div class="col-lg-12"><div class="col-lg-3"><h5>Loan Amount:</h5></div><div class="col-lg-6">@Html.TextBoxFor(e => e.CashLoan)</div></div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="col-lg-3"><h5></h5></div>
            <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
                <input type="submit" style="background-color: #7ac1e6; color: white;float:none" class="btn btn-default" value="Save" />
                <button style="background-color: #e45b5b; color: white;float:none" type="button" class="btn btn-default">Cancel</button>
            </div>
        </div>
    </div>
}
<style>
    input {
        font-size: medium;
        color: black;
    }
</style>